@model IPagedList<MVC1.Models.客戶資料>

@{
    ViewBag.Title = "Index";
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

@if (TempData["CustInfoSuccessMsg"] != null)
{
    <script>
        alert('@TempData["CustInfoSuccessMsg"]');
    </script>
}

<script>
    function Export(url) {
        $("#form").attr("action", url);
        $("#form").submit();
    }
</script>

<h2>客戶資料</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    <p>
        @Html.ActionLink("新增客戶", "Create", new { }, new { @class = "btn btn-xs  btn-primary" })
        <button id="btnExport" class="btn btn-xs btn-primary" onclick="Export('@Url.Action("ExportExcel", "客戶資料")')">匯出客戶資料</button>
        <input type="text" name="name" />
        <input id="Search" type="submit" value="搜尋" class="btn btn-xs" />

    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().客戶分類)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().帳號)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().統一編號)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().電話)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.FirstOrDefault().傳真)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.FirstOrDefault().地址)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶分類)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@Html.PagedListPager(Model,page =>Url.Action("Index", new { page }))