    function DoSort(txt) {        
        if ($("#Sidx").val() == "" || $("#Sidx").val() == "desc") {
            $("#Sidx").val("asc");
        } else {
            if ($("#Sort").val() == txt) {
                $("#Sidx").val("desc");
            }            
        }
        $("#Sort").val(txt);
        $("#form1").submit();
    }
